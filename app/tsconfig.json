{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "public",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "types": [
      "webpack-env",
      "jest"
    ],
    "lib": ["esnext", "dom"],
    "paths": {
      "#*": ["./src*"]
    },
  },
  "exclude": [
    "node_modules","public/**/*"
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
